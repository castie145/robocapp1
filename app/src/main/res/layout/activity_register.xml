<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    tools:context=".MainActivity">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/signup"
    android:text="Sign up"

    android:textColor="@color/g"
    android:textSize="35dp"
    android:textStyle="bold"
    android:layout_margin="140dp"
    android:gravity="center" />

   <EditText
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/item"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:drawablePadding="20dp"
        android:hint="Username"
        android:inputType="textWebEmailAddress"
        android:padding="10dp"
        android:textColor="@color/g"
        android:textColorHint="@color/g"
       />

    <EditText
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:drawablePadding="20dp"
        android:hint="Full name"
        android:padding="10dp"
        android:textColor="@color/g"
        android:textColorHint="@color/g"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="@color/g"
        android:textColorHint="@color/g"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="@color/y"
        android:textColorHint="@color/g"
        android:textStyle="normal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="35dp"


        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/loginbac"


        android:text="sign up!"
        android:textColor="@color/a"
        android:textColorHighlight="@color/y"
        android:textSize="25dp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="0dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_margin="15dp"
            android:layout_height="48dp"
            android:src="@drawable/fb2"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"

            android:src="@drawable/insta2"
            />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="15dp"

            android:src="@drawable/lin"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="left"
        android:layout_margin="60dp">
        <ImageView
            android:layout_width="70dp"

            android:layout_marginTop="70dp"
            android:layout_marginleft="50dp"

            android:layout_height="70dp"
            android:src="@drawable/robot"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="right"
        android:layout_marginTop="120dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_margin="10dp"
            android:layout_height="70dp"
            android:src="@drawable/robot2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"

            android:layout_height="160dp"
            android:src="@drawable/are"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="137dp">

        android:gravity="center">
        <ImageView
            android:layout_width="140dp"

            android:layout_height="100dp"
            android:src="@drawable/aren"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/cus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:text="Contact Us"
        android:textColor="@color/g"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_margin="0dp"/>
    <ImageView
        android:layout_below="@id/c"
        android:layout_width="190dp"

        android:layout_marginTop="120dp"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="19dp"
        android:layout_height="70dp"
        android:src="@drawable/line"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
/>
    <ImageView
        android:layout_below="@id/c"
        android:layout_width="190dp"

        android:layout_marginTop="120dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="220dp"
        android:layout_marginBottom="19dp"
        android:layout_height="70dp"
        android:src="@drawable/line"

        />










</RelativeLayout>